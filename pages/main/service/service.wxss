/* pages/main/service/service.wxss */
.top_title {
  line-height: 44px;
  text-align: left;
  font-size: 34rpx;
  height: 44px;
  background: #fff;
  padding-left: 40rpx;
  font-weight: 400;
}

.card {
  background-color: #fff;
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 15rpx;
}

.card .serverTitle {
  font-size: 32rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.card .serverItem {
  float: left;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.card .serverItem .menuImg {
  margin-bottom: 6rpx;
  width: 110rpx;
  height: 110rpx;
}

.card .serverItem .text {
  width: 110rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: #222222;
}

.fontSize18 {
  font-size: 24rpx;
}