}

.loginMainView  .centerView{
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loginMainView  .centerView .center-top{
  padding-top: 56rpx;
  margin-left: 30rpx;
  width: 80vw;
  height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
}

.loginMainView  .centerView .center-center{
  width: 500rpx;
  margin-top: 50rpx;
  height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 90rpx;
  font-weight: 500;
  background-color: rgba(240, 196, 156, 1);
  border-radius: 90rpx;
 }

 .loginMainView  .centerView .center-bottom{
  width: 500rpx;
  margin-top: 40rpx;
  height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 90rpx;
  font-weight: 500;
  background-color: rgba(240, 196, 156, 1);
  border-radius: 90rpx;
 }

 .imgSel{
  position: relative;
  display: inline-block;
  margin-right: 5px;
}

.sel_agreement{
  width: 15px;
  height: 15px;
  margin-right: 12rpx;
  position: relative;
  top: 4rpx;
}

.agreement_txt{
  text-align: left;
  color: #9C9C9C;
}
.to_agreement{
  color: #333333;
  display: inline;
}

.agreement{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.tipBox{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mark{
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background-color: #000000;
}

.content{
  width: 560rpx;
  background-color:#ffffff ;
  position: relative;
  z-index: 9;
  border-radius: 10rpx;
  text-align: center;
  padding-top: 40rpx;
  font-size: 34rpx;
}

.btnTip{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 36rpx;
  border-top: 1rpx solid #E5E5E5;
  color: #000000;
}

.childrenBtn1{
  border-right: 1rpx solid #E5E5E5 ;
