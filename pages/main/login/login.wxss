.loginMainView {
  position: fixed;
  /* margin-top: -120rpx; */
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: rgba(227, 231, 236, 1);
}

.loginMainView .topView {
  display: flex;
  /* margin-top: 120rpx; */
  width: 100vw;
  height: 260rpx;
  align-items: center;
  /* justify-content: center; */
}

.loginMainView .topView .backBtn{
  margin-left: 40rpx;
}

.loginMainView .topView .topTitle{
  margin-left: 170rpx;
  font-size: 34rpx;
